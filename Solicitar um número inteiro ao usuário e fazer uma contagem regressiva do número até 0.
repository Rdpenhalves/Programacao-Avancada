Rodrigo Dante Penhalves - 2AM
  Solicitar um número inteiro ao usuário e fazer uma contagem regressiva do número até 0.
*******************************************************************************/
#include <stdio.h>

int main()
{
    int numero;
    //Entrada
    printf("Digite um numero: ");
    scanf("%d", &numero);
    
    while(numero == 0) {
        printf("informe um numero mais que zero: ");
        scanf("%d", &numero);
        
    }
    
    if(numero > 0) {
        for(int i = numero; i >= 0; i--){
            printf("contagem %d \n", i);
        }
       }else{
       //Saída
            for(int i = numero; i <= 0; i++) 
                printf("contagem %d \n", i);
            }
    
        
    
            return 0;
}
