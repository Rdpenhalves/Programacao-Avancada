Rodrigo Dante Penhalves - 2AM
  Triangulo de n asteriscos
*******************************************************************************/
#include <stdio.h>
void imprimeTriangulo (int n) {
    for (int l=1; l<=n; l++) {
        for (int c=1; c<=l; c++)
            printf ("*");
        printf ("\n");
    }    
}
int main()
{
    int n;
    //Entrada
    printf ("Qual o tamanho desejado ?");
    scanf ("%d", &n);
    printf ("Triangulo de %d\n",n);
    //SaÃ­da
    imprimeTriangulo(n);    
    return 0;
}
